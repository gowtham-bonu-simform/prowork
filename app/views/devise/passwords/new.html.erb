<div class="d-flex row">
  <div class="col-sm-7"><%= image_tag src="forgot_password.jpg", class: "img-fluid h-100" %></div>
  <div class='col-sm-5 p-5'>
    <h2 class='mb-3'>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3 field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'email', class: "form-control" %>
      </div>

      <div class="mb-3 actions text-center">
        <%= f.submit "Send me reset password instructions", class: 'btn btn-light' %>
      </div>
    <% end %>

    <div class="text-end"><%= render "devise/shared/links" %></div>
  </div>
</div>